# Enable Apache URL rewriting engine
RewriteEngine On

# Route /api/* requests to backend/api.php and pass the path
# Condition: Check if the requested file does not exist as a physical file
RewriteCond %{REQUEST_FILENAME} !-f
# Condition: Check if the requested path does not exist as a directory
RewriteCond %{REQUEST_FILENAME} !-d
# Rule: Rewrite /api/anything to backend/api.php?path=anything
# QSA = Query String Append (preserve existing query parameters)
# L = Last rule (stop processing further rules)
RewriteRule ^api/(.*)$ backend/api.php?path=$1 [QSA,L]

