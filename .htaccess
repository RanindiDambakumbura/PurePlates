# Enable Apache URL rewriting engine
RewriteEngine On

# Route /api/* requests to backend/api.php
# QSA = Query String Append (preserve existing query parameters)
# L = Last rule (stop processing further rules)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ backend/api.php?path=$1 [QSA,L]

